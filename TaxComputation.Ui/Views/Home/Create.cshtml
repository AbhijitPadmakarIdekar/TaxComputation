@model TaxComputation.Domain.Entities.Company

@{
    ViewData["Title"] = "Create";
}

<div class=" container align-items-center justify-content-center">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control" type="text" x-autocompletetype="disabled" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyCity" class="control-label"></label>
                    <input asp-for="CompanyCity" class="form-control" type="text" x-autocompletetype="disabled" />
                    <span asp-validation-for="CompanyCity" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="GstNumber" class="control-label"></label>
                    <input asp-for="GstNumber" class="form-control" type="number" x-autocompletetype="disabled" />
                    <span asp-validation-for="GstNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactNumber" class="control-label"></label>
                    <input asp-for="ContactNumber" class="form-control" type="number" x-autocompletetype="disabled" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group text-center p-2">
                    <input type="submit" value="Save User Details" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group text-center p-2">
                    <a class="btn btn-warning" asp-area="" asp-controller="Home" asp-action="Index">Go Back To Home</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}  